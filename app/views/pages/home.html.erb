<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://res.cloudinary.com/daitlzche/image/upload/v1542109468/basil-delicious-food-459469.jpg');">
  <div class="button_container">
    <% if user_signed_in? %>
      <p class= "link"><%= link_to "Logout", destroy_user_session_path, method: :delete %></p>
      <p class= "link"><%= link_to "Settings", user_registration_path%></p>
    <% else %>
      <p class= "link"><%= link_to "Login", new_user_session_path %></p>
      <p class= "link"><%= link_to "Sign up", new_user_registration_path %></p>
    <% end %>
  </div>
  <div class="banner-content">
    <%= form_tag events_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find an event"
      %>
    <% end %>
  </div>
</div>
